import { assertEquals, test } from "Test"

import { pInspect } from "./Inspect"


type User = User(String, Integer)


test("pInspect - Integer", () => assertEquals(pInspect(3), "3"))

test("pInspect - Float", () => assertEquals(pInspect(3.5), "3.5"))

test("pInspect - List", () => assertEquals(pInspect([3.5, 7.5]), "[3.5, 7.5]"))

test(
  "pInspect - List overflowed",
  () => assertEquals(
    pInspect([
      3.5,
      7.5,
      14.5,
      135.5,
      975.5,
      1153.5,
      8193.5,
      21893.5,
      103892.5,
      3532083.5,
      48104328.5,
    ]),
    "[\n  3.5,\n  7.5,\n  14.5,\n  135.5,\n  975.5,\n  1153.5,\n  8193.5,\n  21893.5,\n  103892.5,\n  3532083.5,\n  48104328.5\n]",
  ),
)

test("pInspect - Constructor", () => assertEquals(pInspect(User("John", 35)), "User(\"John\", 35)"))

test("pInspect - Constructor overflowed", () => assertEquals(pInspect(User("Name that is super long and should force the pretty printer to break the line right there or else it's broken", 35)), "User(\n  \"Name that is super long and should force the pretty printer to break the line right there or else it's broken\",\n  35\n)"))
