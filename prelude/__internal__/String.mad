filterChars :: (Char -> Boolean) -> String -> String
export filterChars = (predicate, s) => pipe(
  toList,
  List.filter(predicate),
  fromList
)(s)


reduceChars :: (a -> Char -> a) -> a -> String -> a
export reduceChars = (f, initial, s) => pipe(
  toList,
  List.reduce(f, initial)
)(s)


