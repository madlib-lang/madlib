instance Show a => Show { stuff :: a } {
  show = (withStuff) => `{ stuff: ${show(withStuff.stuff)} }`
}

instance (Show a, Show b) => Show { x :: a, y :: b } {
  show = (pos) => `{ x: ${show(pos.x)}, y: ${show(pos.y)} }`
}

IO.log(show({ stuff: false }))

IO.log(show({ x: 3, y: 4 }))

