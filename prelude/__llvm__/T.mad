makeInverter :: () -> (() -> Boolean)
makeInverter = (_) => {
  initial = false

  return (_) => {
    initial = !initial
    return initial
  }
}

inverter = makeInverter(())
IO.prettyLog(inverter(()))
IO.prettyLog(inverter(()))
IO.prettyLog(inverter(()))



makeCounter :: () -> (() -> String)
makeCounter = (_) => {
  count = ""

  innerCounter = (_) => {
    return (_) => {
      count = count ++ "1"
      return count
    }
  }

  return innerCounter(())
}

counter = makeCounter(())

IO.prettyLog(counter(()))
IO.prettyLog(counter(()))
counter2 = makeCounter(())
IO.prettyLog(counter2(()))
