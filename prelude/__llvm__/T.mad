IO.prettyLog(counter2(()))


makeGrower :: () -> (Integer -> List Integer)
makeGrower = (_) => {
  initial = []

  return (n) => {
    initial = [...initial, n]
    return initial
  }
}

grower = makeGrower(())
grower(1)
grower(2)
grower(3)
grower(4)
IO.prettyLog(grower(10))
IO.prettyLog(grower(21))


makeCounterWithRec :: () -> (() -> Integer)
makeCounterWithRec = (_) => {
  count = { a: 0 }

  return (_) => {
    count = { a: count.a + 1 }
    return count.a
  }
}

c2 = makeCounterWithRec(())
c2(())
c2(())
c2(())
IO.prettyLog(c2(()))




